<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Showcase">
        <attr name="display" format="boolean" />
        <attr name="targetId" format="reference" />
        <attr name="buffWidth" format="dimension" />
        <attr name="buffHeight" format="dimension" />
        <attr name="text" format="string" />
        <attr name="textSize" format="dimension" />
        <attr name="textBoxMaxWidth" format="dimension" />
        <attr name="canceledOnTouchOutside" format="boolean" />
        <attr name="canceledOnTouchTarget" format="boolean" />

        <attr name="direction">
<!--            <enum name="unknown" value="-1" />
            <enum name="left" value="0" />
            <enum name="right" value="2" />-->
            <enum name="above" value="1" />
            <enum name="below" value="3" />
        </attr>

        <attr name="shape">
            <enum name="rect" value="1" />
            <enum name="oval" value="2" />
            <enum name="leaf" value="3" />
        </attr>
    </declare-styleable>

</resources>
